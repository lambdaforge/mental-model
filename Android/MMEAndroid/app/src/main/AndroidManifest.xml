<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.example.mmeandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:usesCleartextTraffic="true"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="M-TOOL"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="GoogleAppIndexingWarning">

        <provider
                android:name=".AssetProvider"
                android:authorities="com.example.mmeandroid.assetprovider"
                android:grantUriPermissions="true"
                android:exported="true" />

        <activity
                android:label="Mental Model Mapping"
                android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:label="Mental Model Mapping"
                android:name=".HomeActivity"
                android:parentActivityName=".HomeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
        </activity>

        <activity
                android:label="File Upload"
                android:name=".UploadActivity"
                android:parentActivityName=".HomeActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />

        </activity>

        <!-- Set config change to prevent webview from reloading on orientation change -->
        <activity
                android:label="Model Mapping"
                android:name=".MainActivity"
                android:screenOrientation="landscape"
                android:configChanges="keyboardHidden|orientation|screenSize|layoutDirection|uiMode"
                android:parentActivityName=".HomeActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".HomeActivity" />
        </activity>

    </application>

</manifest>